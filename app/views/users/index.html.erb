<h1>All users</h1>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <h2><%= link_to user.name, user %></h2>
      <h2><%= user.email %></h2>
      <% if current_user.admin? %>
        <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>